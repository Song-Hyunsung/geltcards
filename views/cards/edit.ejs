<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center"> Edit <%= card.name %> </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cards/<%= card._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="card[name]" value="<%= card.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="card[image]" value="<%= card.image %>">
                </div>
                <div class="form-group">
                    <textarea name=card[description]><%=card.description%></textarea>
                </div>      
                <div class="form-group">
                    <button id="trans" class="btn btn-md btn-primary btn-block"> Submit </button>
                </div>
            </form>
            <a id="trans" href="/cards"> Go Back </a>
        </div>
    </div>
</div>

<% include ../partials/footer %>